# AtlasHub Environment Variables
# Copy this file to .env and fill in the values

# ============================================================
# PostgreSQL
# ============================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=platform
POSTGRES_PORT_EXPOSE=127.0.0.1:5432
POSTGRES_MAX_POOL_SIZE=5

# ============================================================
# MinIO (S3-compatible storage)
# ============================================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_minio_password_here
MINIO_REGION=us-east-1
MINIO_PORT_EXPOSE=127.0.0.1:9000
MINIO_CONSOLE_PORT_EXPOSE=127.0.0.1:9001

# ============================================================
# Security
# ============================================================
# Master key for encrypting project database credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PLATFORM_MASTER_KEY=your_32_byte_hex_master_key_here_64_chars_total

# Development admin token (only used when NODE_ENV=development)
DEV_ADMIN_TOKEN=dev-secret-token-change-me

# ============================================================
# Cloudflare Access (Production)
# ============================================================
# Team domain from Cloudflare Access
CF_ACCESS_TEAM_DOMAIN=
# Audience tag (aud claim) from your Access application
CF_ACCESS_AUDIENCE=

# ============================================================
# Cloudflare Tunnel
# ============================================================
CLOUDFLARE_TUNNEL_TOKEN=

# ============================================================
# Gateway Configuration
# ============================================================
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGINS=*
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
STATEMENT_TIMEOUT_MS=5000
MAX_ROWS_PER_QUERY=1000
PRESIGNED_URL_EXPIRY_SECONDS=3600

# ============================================================
# Dashboard
# ============================================================
# Public URL for the gateway API (used in browser)
NEXT_PUBLIC_GATEWAY_URL=http://localhost:3000
# Internal URL for server-side requests
GATEWAY_INTERNAL_URL=http://localhost:3000
