# AtlasHub Production Environment Variables
# For Raspberry Pi deployment with Cloudflare Tunnel

# ============================================================
# PostgreSQL
# ============================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=platform
POSTGRES_MAX_POOL_SIZE=5

# ============================================================
# MinIO (S3-compatible storage)
# ============================================================
MINIO_ACCESS_KEY=atlashub
MINIO_SECRET_KEY=YOUR_SECURE_MINIO_SECRET_KEY_HERE
MINIO_REGION=us-east-1

# ============================================================
# Security
# ============================================================
# Master key for encrypting project database credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PLATFORM_MASTER_KEY=YOUR_SECURE_PLATFORM_MASTER_KEY_HERE

# JWT secret for session tokens (min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE
# Session duration in hours
SESSION_EXPIRY_HOURS=24

# ============================================================
# Gateway Configuration
# ============================================================
NODE_ENV=development
PORT=YOUR_DESIRED_PORT_HERE
HOST=0.0.0.0
LOG_LEVEL=info
CORS_ORIGINS=YOUR_ALLOWED_ORIGINS_HERE
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
STATEMENT_TIMEOUT_MS=5000
MAX_ROWS_PER_QUERY=1000
PRESIGNED_URL_EXPIRY_SECONDS=3600

# ============================================================
# Dashboard
# ============================================================
# Public URL for the gateway API (used in browser)
NEXT_PUBLIC_GATEWAY_URL=http://localhost:3001
