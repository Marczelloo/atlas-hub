{
  "name": "atlashub",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:gateway": "pnpm --filter @atlashub/gateway dev",
    "dev:dashboard": "pnpm --filter @atlashub/dashboard dev",
    "build": "pnpm run -r build",
    "build:shared": "pnpm --filter @atlashub/shared build",
    "build:gateway": "pnpm --filter @atlashub/gateway build",
    "build:dashboard": "pnpm --filter @atlashub/dashboard build",
    "lint": "pnpm run -r lint",
    "clean": "pnpm run -r clean && rimraf node_modules",
    "test": "pnpm run -r test",
    "docker:dev": "docker compose --profile dev up",
    "docker:prod": "docker compose up -d",
    "db:migrate": "pnpm --filter @atlashub/gateway db:migrate"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0"
  }
}
